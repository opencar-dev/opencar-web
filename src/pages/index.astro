---
import Layout from "@/layouts/Layout.astro";
import Navbar from "@/components/Navbar.astro";
import HeroSection from "@/components/HeroSection.astro";
import AboutSection from "@/components/AboutSection.astro";
import StandardsSection from "@/components/StandardsSection.astro";
import ProcessSection from "@/components/ProcessSection.astro";
import PartnersSection from "@/components/PartnersSection.astro";
import Footer from "@/components/Footer.astro";
---

<Layout>
  <div class="min-h-screen bg-background blueprint-bg">
    <Navbar />
    <main class="pt-16">
      <HeroSection />
      <AboutSection />
      <StandardsSection />
      <ProcessSection />
      <PartnersSection />
    </main>
    <Footer />
  </div>
</Layout>
